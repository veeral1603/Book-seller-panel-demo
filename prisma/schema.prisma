generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Seller {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  books     Book[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Book {
  id          String   @id @default(cuid())
  imageUrl    String
  title       String
  description String?
  price       Float
  stock       Int
  seller      Seller   @relation(fields: [sellerId], references: [id])
  sellerId    String
  sales       Sale[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Sale {
  id         String   @id @default(cuid())
  quantity   Int
  totalPrice Float
  book       Book     @relation(fields: [bookId], references: [id])
  bookId     String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
